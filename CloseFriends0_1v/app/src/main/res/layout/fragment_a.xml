<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relative1"
    >


    <ImageView
        android:layout_width="256px"
        android:layout_height="256px"
        android:id="@+id/imageView"
        android:layout_gravity="left"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/blue"
        />

    <TextView
        android:id="@+id/nicknameLable2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/imageView"
        android:text="닉네임 : "
        android:textSize="24dp"
        android:textColor="#ff000000"
        android:layout_marginTop="16dp"
        />

    <EditText
        android:id="@+id/nickinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/nicknameLable2"
        android:textSize="24dp"
        android:textColor="#ff000000"
        android:layout_alignBaseline="@+id/nicknameLable2"
        />

    <TextView
        android:id="@+id/ageLable2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나이 : "
        android:textSize="24dp"
        android:layout_below="@+id/nicknameLable2"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:textColor="#ff000000"
        />

    <EditText
        android:id="@+id/ageinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ageLable2"
        android:textSize="24dp"
        android:textColor="#ff000000"
        android:layout_alignBaseline="@+id/ageLable2"
        />

    <TextView
        android:id="@+id/sexLable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ageLable2"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="성별 : "
        android:textColor="#ff000000"
        android:textSize="24dp"
        />

    <TextView
        android:id="@+id/sexinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/sexLable"
        android:layout_alignBaseline="@+id/sexLable"
        android:textColor="#ff000000"
        android:textSize="24dp"
        />

    <TextView
        android:id="@+id/interLable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sexLable"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="관심사 : "
        android:textColor="#ff000000"
        android:textSize="24dp"
        />

    <TextView
        android:id="@+id/interinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/interLable"
        android:layout_alignBaseline="@+id/interLable"
        android:textColor="#ff000000"
        android:textSize="24dp"
        />

    <TextView
        android:id="@+id/interLable2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/interLable"
        android:layout_marginLeft="16dp"
        android:text="관심사 설정 "
        android:textColor="#ff000000"
        android:textSize="24dp"/>
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/interLable2"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:layout_alignBaseline="@+id/interLable2"
        >

    </Spinner>
    <Button
        android:id="@+id/modbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정보 수정"
        android:layout_below="@+id/spinner"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/editfriend"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="친구 추가 할 ID"
        android:layout_alignParentBottom="true"
        />

    <Button
        android:id="@+id/addbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="친구 추가"
        android:layout_toRightOf="@+id/editfriend"
        android:layout_alignBaseline="@+id/editfriend"

        />

</RelativeLayout>