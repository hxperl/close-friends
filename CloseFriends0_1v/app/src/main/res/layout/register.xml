<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/blue"
    >

    <TextView
        android:id="@+id/titleLable2"
        android:text="JOIN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:textSize="24dp"
        android:layout_alignParentTop="true"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:background="#aaffffff"
        >

        <TextView
            android:id="@+id/usernameLabel2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:text="Username : "
            android:textColor="#ff222222"
            android:textSize="18dp"
            />

        <EditText
            android:id="@+id/usernameEntry2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/usernameLabel2"
            android:layout_alignBaseline="@id/usernameLabel2"
            android:layout_marginLeft="4dp"
            />

        <TextView
            android:id="@+id/passwordLabel2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:layout_below="@id/usernameLabel2"
            android:text="Password : "
            android:textColor="#ff222222"
            android:textSize="18dp"
            />

        <EditText
            android:id="@+id/passwordEntry2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/passwordLabel2"
            android:layout_alignBaseline="@id/passwordLabel2"
            android:inputType="textPassword"
            />

        <TextView
            android:id="@+id/passwordLabel3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:layout_below="@id/passwordLabel2"
            android:text="Password Confirm: "
            android:textColor="#ff222222"
            android:textSize="14dp"
            />

        <EditText
            android:id="@+id/passwordEntry3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/passwordLabel3"
            android:layout_alignBaseline="@id/passwordLabel3"
            android:inputType="textPassword"
            />

        <TextView
            android:id="@+id/nicknameLable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nick name :"
            android:textSize="18dp"
            android:textColor="#ff222222"
            android:layout_below="@id/passwordLabel3"
            android:paddingTop="16dp"
            />

        <EditText
            android:id="@+id/nicknameEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/nicknameLable"
            android:layout_marginLeft="4dp"
            android:layout_alignBaseline="@id/nicknameLable"
            />

        <TextView
            android:id="@+id/ageLable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age :"
            android:textSize="18dp"
            android:textColor="#ff222222"
            android:layout_below="@id/nicknameLable"
            android:paddingTop="16dp"
            />

        <EditText
            android:id="@+id/ageEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ageLable"
            android:layout_marginLeft="4dp"
            android:layout_alignBaseline="@id/ageLable"
            />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ageLable"
            >


            <RadioButton
                android:id="@+id/male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="male"
                android:textSize="16dp"
                android:layout_marginTop="16dp"

                />

            <RadioButton
                android:id="@+id/female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="female"
                android:textSize="16dp"
                />
        </RadioGroup>



    </RelativeLayout>

    <Button
        android:id="@+id/joinBtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="30dp"
        android:background="#ff000000"
        android:textColor="#ffffffff"
        />

    <Button
        android:id="@+id/exitBtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/joinBtn2"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="90dp"
        android:text="Exit"
        android:textColor="#ff000000"
        android:background="#ffffffff"
        />

</RelativeLayout>
